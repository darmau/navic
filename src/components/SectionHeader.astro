---
const { title, subtitle } = Astro.props;
---

<header class="background">
  <div class="flex items-center px-4 sm:px-6 lg:px-8 w-full max-w-7xl">
    <h2 class="title">{title}</h2>
    <h3 class="subtitle">{subtitle}</h3>
  </div>
</header>

<style>
  .background {
    position: relative;
    background: rgb(20, 80, 140);
    color: #ffffff;
    min-height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 0;
  }

  .title {
    font-size: 24px;
    font-weight: 500;
    margin: 0;
  }

  .subtitle {
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    font-size: 48px;
    font-weight: 700;
    position: absolute;
    right: 0;
    bottom: 0;
  }

  @media (min-width: 768px) {
    .background {
      height: 180px;
    }
    .subtitle {
      font-size: 64px;
      bottom: -12px;
      right: 12px;
    }
  }
</style>
