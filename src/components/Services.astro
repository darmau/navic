---
import { Image } from "astro:assets";
import brands from "@/data/brands.json";
import { mapGlobToImages } from "@/utils/imageMap";
import navicLogo from "@/images/navic_logo.png";

const iconModules = import.meta.glob("../images/logo/*", { eager: true });
const iconByName = mapGlobToImages(iconModules);

const positionedBrands = brands.map((brand, index, arr) => {
  const angle = (index / arr.length) * Math.PI * 2 - Math.PI / 2;
  const radius = 42;
  const x = 50 + radius * Math.cos(angle);
  const y = 50 + radius * Math.sin(angle);

  return {
    ...brand,
    lines: brand.label.split("\n"),
    iconImages: brand.icons
      .map((iconPath) => {
        const name = iconPath.split("/").pop() ?? iconPath;
        return iconByName[name] ?? iconPath;
      })
      .filter(Boolean),
    position: { x, y },
  };
});

const linkPoints =
  positionedBrands.length > 1
    ? [...positionedBrands, positionedBrands[0]]
        .map((brand) => `${brand.position.x},${brand.position.y}`)
        .join(" ")
    : "";
---

<section class="my-12 md:my-16">
  <header class="bg-sky-50/50 text-center py-8 md:py-12">
    <h2 class="text-2xl font-bold text-sky-900 md:text-5xl">NAVICの取り組み</h2>
    <h3 class="uppercase text-sky-950 font-medium">our service</h3>
  </header>
  <div class="services">
    <div class="orbit">
      {
        linkPoints && (
          <svg
            class="links"
            viewBox="0 0 100 100"
            preserveAspectRatio="none"
            aria-hidden="true"
          >
            <polyline points={linkPoints} />
          </svg>
        )
      }
      <div class="center-logo">
        <Image
          src={navicLogo}
          alt="NAVIC Logo"
          width={600}
          height={600}
          class="logo-image"
        />
      </div>
      {
        positionedBrands.map((brand) => (
          <div
            class="service"
            style={`left:${brand.position.x}%; top:${brand.position.y}%;`}
          >
            <div class="badge">
              <div class="label">
                {brand.lines.map((line) => (
                  <span>{line}</span>
                ))}
              </div>
              <div class="icons">
                {brand.iconImages.map((icon, iconIndex) =>
                  typeof icon === "string" ? (
                    <img
                      src={icon}
                      alt={`${brand.label} icon ${iconIndex + 1}`}
                      loading="lazy"
                    />
                  ) : (
                    <Image
                      src={icon}
                      alt={`${brand.label} icon ${iconIndex + 1}`}
                      width={120}
                      height={120}
                      loading="lazy"
                    />
                  )
                )}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .services {
    display: flex;
    justify-content: center;
    width: 100%;
    padding: 2rem 0;
    background: rgba(180, 209, 230, 0.62);
  }

  .orbit {
    position: relative;
    width: 90%;
    aspect-ratio: 1 / 1;
    margin: auto;
  }

  .service {
    position: absolute;
    transform: translate(-50%, -50%);
  }

  .links {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .links polyline {
    fill: none;
    stroke: rgb(20, 80, 140);
    stroke-width: 0.2;
    stroke-linejoin: round;
  }

  .center-logo {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-image {
    width: clamp(180px, 15vw, 360px);
    height: auto;
    object-fit: contain;
  }

  .badge {
    width: clamp(70px, 18vw, 120px);
    height: clamp(70px, 18vw, 120px);
    padding: clamp(0.75rem, 2.5vw, 1rem);
    border-radius: 50%;
    background: #ffffff;
    box-shadow:
      0 10px 30px rgba(45, 69, 110, 0.12),
      0 2px 6px rgba(45, 69, 110, 0.08);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: clamp(0.4rem, 1.5vw, 0.65rem);
    text-align: center;
  }

  .label {
    display: flex;
    flex-direction: column;
    gap: clamp(0.1rem, 0.5vw, 0.2rem);
    font-weight: 700;
    color: #1f2a44;
    line-height: 1.2;
    font-size: clamp(0.7rem, 2.2vw, 0.9rem);
  }

  .icons {
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
    gap: -2px;
    max-width: 100%;
    width: 100%;
  }

  .icons img {
    width: auto;
    height: 100%;
    max-height: 36px;
    object-fit: contain;
    flex-shrink: 0;
  }

  @media (min-width: 640px) {
    .services {
      width: 100%;
    }

    .orbit {
      width: min(95vw, 540px);
    }

    .logo-image {
      width: clamp(240px, 12vw, 360px);
    }

    .badge {
      width: clamp(100px, 15vw, 120px);
      height: clamp(100px, 15vw, 120px);
      padding: clamp(0.75rem, 2.5vw, 0.85rem);
    }

    .label {
      font-size: clamp(0.85rem, 2.2vw, 0.9rem);
    }

    .icons {
      flex-wrap: wrap;
    }

    .icons img {
      width: 100%;
      height: clamp(36px, 3.5vw, 48px) !important;
    }
  }

  @media (min-width: 1024px) {
    .services {
      padding: 8rem 0;
    }
    .orbit {
      width: min(95vw, 720px);
    }

    .logo-image {
      width: clamp(360px, 18vw, 540px);
    }

    .badge {
      width: clamp(120px, 18vw, 180px);
      height: clamp(120px, 18vw, 180px);
      padding: clamp(1rem, 3vw, 1.2rem);
      gap: clamp(0.65rem, 2vw, 0.8rem);
    }

    .label {
      font-size: clamp(1rem, 2.5vw, 1.5rem);
      gap: clamp(0.2rem, 0.6vw, 0.3rem);
    }

    .icons img {
      width: auto;
      height: clamp(48px, 4vw, 56px) !important;
    }
  }
</style>
