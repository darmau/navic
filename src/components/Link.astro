---
import { Image } from "astro:assets";
import links from "@/data/links.json";
import { mapGlobToImages } from "@/utils/imageMap";
import SectionHeader from "./SectionHeader.astro";

const linkModules = import.meta.glob("../images/link/*", { eager: true });
const linkByName = mapGlobToImages(linkModules);

const items = links.map((item) => {
  const name = item.image.split("/").pop() ?? item.image;
  return { ...item, image: linkByName[name] ?? item.image };
});
---

<section>
  <SectionHeader title="外部リンク" subtitle="link" />

  <div class="grid grid-cols-3 md:grid-cols-4 lg:grid-cols-7 gap-4 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 my-12">
    {
      items.map((item) => (
        <div class="border border-sky-300 rounded-md p-4 space-y-2">
          <div class="links__image">
            <Image
              src={item.image}
              alt={item.title}
              width={420}
              height={260}
              loading="lazy"
            />
          </div>
          <p class="text-lg font-bold text-sky-900 text-center">{item.title}</p>
        </div>
      ))
    }
  </div>
</section>
