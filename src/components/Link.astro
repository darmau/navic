---
import { Image } from "astro:assets";
import links from "@/data/links.json";
import { mapGlobToImages } from "@/utils/imageMap";

const linkModules = import.meta.glob("../images/link/*", { eager: true });
const linkByName = mapGlobToImages(linkModules);

const items = links.map((item) => {
  const name = item.image.split("/").pop() ?? item.image;
  return { ...item, image: linkByName[name] ?? item.image };
});
---

<section class="links">
  <header class="links__header">
    <h2>外部リンク</h2>
    <span>link</span>
  </header>

  <div class="links__grid">
    {items.map((item) => (
      <div class="links__card">
        <div class="links__image">
          {typeof item.image === "string" ? (
            <img src={item.image} alt={item.title} loading="lazy" />
          ) : (
            <Image src={item.image} alt={item.title} width={420} height={260} loading="lazy" />
          )}
        </div>
        <p class="links__title">{item.title}</p>
      </div>
    ))}
  </div>
</section>

<style>
  .links {
    padding: 4rem 1rem 5rem;
    max-width: 1180px;
    margin: 0 auto;
  }

  .links__header h2 {
    margin: 0;
    font-size: 1.8rem;
  }

  .links__header span {
    color: #6b7280;
    text-transform: uppercase;
    font-size: 0.9rem;
  }

  .links__grid {
    margin-top: 1.5rem;
    display: grid;
    gap: 1.2rem;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  }

  .links__card {
    background: #ffffff;
    border-radius: 14px;
    box-shadow: 0 12px 30px rgba(27, 48, 84, 0.14), 0 4px 10px rgba(27, 48, 84, 0.08);
    padding: 0.75rem 0.75rem 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.65rem;
    transition: transform 180ms ease, box-shadow 180ms ease;
  }

  .links__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 36px rgba(27, 48, 84, 0.18), 0 6px 14px rgba(27, 48, 84, 0.12);
  }

  .links__image {
    aspect-ratio: 16 / 10;
    width: 100%;
    border-radius: 12px;
    overflow: hidden;
    background: #e5e7eb;
  }

  .links__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .links__title {
    margin: 0;
    font-weight: 700;
    color: #111827;
    line-height: 1.4;
    font-size: 1rem;
  }
</style>
