---
import { Image } from "astro:assets";
import news from "@/data/news.json";
import { mapGlobToImages } from "@/utils/imageMap";

const coverModules = import.meta.glob("../images/news/*", { eager: true });
const coverByName = mapGlobToImages(coverModules);

const newsItems = news.map((item) => {
  const name = item.cover.split("/").pop() ?? item.cover;
  return {
    ...item,
    coverImage: coverByName[name] ?? item.cover,
  };
});
---

<section class="news">
  <header class="news__header">
    <div>
      <h2>お知らせ</h2>
      <span>news</span>
    </div>
  </header>
  <ul class="news__list">
    {newsItems.map((item) => (
      <li class="news__item">
        <div class="news__cover">
          {typeof item.coverImage === "string" ? (
            <img src={item.coverImage} alt={`${item.title} cover`} loading="lazy" />
          ) : (
            <Image
              src={item.coverImage}
              alt={`${item.title} cover`}
              width={220}
              height={140}
              loading="lazy"
            />
          )}
        </div>
        <div class="news__body">
          <p class="news__date">{item.date}</p>
          <h3 class="news__title">{item.title}</h3>
        </div>
      </li>
    ))}
  </ul>
</section>

<style>
  .news {
    padding: 4rem 1rem;
    max-width: 1024px;
    margin: 0 auto;
  }

  .news__header h2 {
    font-size: 1.8rem;
    margin: 0;
  }

  .news__header span {
    color: #6b7280;
    text-transform: uppercase;
    font-size: 0.9rem;
  }

  .news__list {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .news__item {
    display: grid;
    grid-template-columns: 240px 1fr;
    gap: 1.25rem;
    align-items: center;
    background: #ffffff;
    border-radius: 14px;
    box-shadow: 0 10px 25px rgba(27, 48, 84, 0.1), 0 2px 8px rgba(27, 48, 84, 0.06);
    padding: 1rem;
  }

  .news__cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px;
    display: block;
  }

  .news__body {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .news__date {
    margin: 0;
    color: #6b7280;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .news__title {
    margin: 0;
    font-size: 1.15rem;
    line-height: 1.4;
    color: #111827;
  }

  @media (max-width: 700px) {
    .news__item {
      grid-template-columns: 1fr;
    }

    .news__cover {
      width: 100%;
      max-height: 200px;
    }
  }
</style>
