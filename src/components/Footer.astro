---
import footer from "@/data/footer.json";
import youtubeIcon from "@/images/youtube.svg";
import navicLogo from "@/images/navic_logo.png";
import { Image } from "astro:assets";
---

<footer class="bg-sky-900 text-white">
  <div class="max-w-7xl mx-auto w-full p-4 lg:p-8 flex flex-col gap-4">
    <div class="hidden md:flex md:flex-row md:justify-between">
      <ul class="space-y-2 lg:space-y-4">
        {footer.top_links.map((link) => <li>{link}</li>)}
      </ul>
      <li class="hidden lg:block">
        <Image src={navicLogo} alt="Navic logo" class="h-16 w-auto" />
      </li>
    </div>
    <div class="flex flex-col gap-4 lg:flex-row lg:justify-between">
      <div
        class="hidden md:flex md:flex-row md:justify-between md:gap-4 lg:gap-12"
      >
        <div class="space-y-2">
          <h3 class="font-medium">{footer.company_info.title}</h3>
          <ul class="border-l border-white pl-4 text-sm space-y-2">
            {footer.company_info.items.map((item) => <li>{item}</li>)}
          </ul>
        </div>
        <div class="space-y-2">
          <h3 class="font-medium">{footer.services.title}</h3>
          <ul class="border-l border-white pl-4 text-sm space-y-2">
            {footer.services.items.map((item) => <li>{item}</li>)}
          </ul>
        </div>
        <div class="space-y-2">
          <h3 class="font-medium">{footer.recruit.title}</h3>
          <ul class="border-l border-white pl-4 text-sm space-y-2">
            {footer.recruit.items.map((item) => <li>{item}</li>)}
          </ul>
        </div>
        <div class="space-y-2">
          <h3 class="font-medium">{footer.social_media.title}</h3>
          <ul class="border-l border-white pl-4 text-sm space-y-2">
            {footer.social_media.items.map((item) => <li>{item}</li>)}
          </ul>
          <ul class="text-sm space-y-2">
            {footer.legal.map((item) => <li>{item}</li>)}
          </ul>
        </div>
      </div>
      <ul
        class="grid grid-cols-2 gap-2 justify-items-center md:grid-cols-4 md:my-8"
      >
        {
          footer.channels.map((item) => (
            <li class="flex flex-col items-center gap-2 md:max-w-24">
              <img src={youtubeIcon.src} alt="YouTube" class="w-8 h-8" />
              <span class="text-xs text-center">{item}</span>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
  <p class="bg-sky-800 text-center text-xs py-2">
    Copyright(C) NAVIC Co.,LTD. All Rights Reserved.
  </p>
</footer>
